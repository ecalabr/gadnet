{
  "data_dir": "/data/gliogenomics/gliomarad",
  "model_dir": "same",
  "overwrite": false,
  "random_state": 42,

  "data_prefix": ["T1_w", "T1gad_w", "T2_w", "FLAIR_w", "DWI_w"],
  "label_prefix": ["combined_brain_mask"],
  "mask_prefix": ["combined_brain_mask"],
  "mask_dilate": [80, 80, 80],
  "filter_zero": 0,

  "dimension_mode": "3D",
  "data_plane": "ax",
  "train_dims": [80, 80, 80],
  "train_patch_overlap": [2, 2, 2],
  "infer_dims": [200, 232, 200],
  "infer_patch_overlap": [1, 1, 1],
  "augment_train_data": true,
  "label_interp": 0,
  "mask_weights": false,

  "norm_data": true,
  "norm_labels": false,
  "norm_mode": "zscore",

  "model_name": "unet_3d_bneck",
  "base_filters": 32,
  "output_filters": 1,
  "layer_layout": [3, 4, 4],
  "final_layer": "sigmoid",
  "kernel_size": [3, 3, 3],
  "data_format": "channels_last",
  "activation": "leaky_relu",
  "mixed_precision": false,
  "dist_strat": "none",

  "shuffle_size": 500,
  "batch_size": 4,
  "samples_per_epoch": 20000,
  "num_threads": 4,
  "train_fract": 1.0,
  "learning_rate": [0.001, 12, 0.5],
  "learning_rate_decay": "simple_step",
  "optimizer": "adam",
  "loss": "combo_loss3d",
  "metrics": "bce",
  "num_epochs": 20,
  "dropout_rate": 0.3
}
